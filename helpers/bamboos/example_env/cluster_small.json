{
    "dirs_config": {
        "op_ccm": {
            "input_dir": "rel/op_ccm",
            "target_dir": "rel/test_cluster"
        },
        "cluster_worker": {
            "input_dir": "rel/cluster_worker",
            "target_dir": "rel/test_cluster"
        }
    },
    "os_configs": {
        "cfg1": {
            "storages": [
                "/mnt/st1"
            ],
            "users": [
                "user1"
            ],
            "groups": {
                "group1": [
                    "user1"
                ]
            }
        }
    },
    "cluster_domains": {
        "p1": {
            "db_driver": "couchbase",
            "os_config": "cfg1",
            "op_ccm": {
                "ccm1": {
                    "vm.args": {
                        "setcookie": "cookie1"
                    },
                    "sys.config": {
                        "ccm_nodes": [
                            "ccm1"
                        ],
                        "worker_num": 1
                    }
                }
            },
            "cluster_worker": {
                "worker1": {
                    "vm.args": {
                        "setcookie": "cookie1"
                    },
                    "sys.config": {
                        "ccm_nodes": [
                            "ccm1"
                        ],
                        "db_nodes": [
                            "riaknode1"
                        ],
                        "verify_gr_cert": false
                    }
                }
            }
        }
    }
}