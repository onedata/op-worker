{
    "providers": {
        "p1": {
            "op_ccm": {
                "config": {
                    "input_dir": "rel/op_ccm",
                    "target_dir": "rel/test_cluster"
                },
                "nodes": {
                    "ccm1_p1": {
                        "vm.args": {
                            "setcookie": "cookie1"
                        },
                        "sys.config": {
                            "ccm_nodes": [
                                "ccm1_p1@"
                            ],
                            "worker_num": 1
                        }
                    }
                }
            },
            "op_worker": {
                "config": {
                    "input_dir": "rel/op_worker",
                    "target_dir": "rel/test_cluster"
                },
                "nodes": {
                    "worker1_p1": {
                        "vm.args": {
                            "setcookie": "cookie1"
                        },
                        "sys.config": {
                            "ccm_nodes": [
                                "ccm1_p1@"
                            ],
                            "db_nodes": [
                                "riaknode1",
                                "riaknode2"
                            ],
                            "global_registry_node": "gr1@"
                        }
                    }
                }
            }
        },
        "p2": {
            "op_ccm": {
                "config": {
                    "input_dir": "rel/op_ccm",
                    "target_dir": "rel/test_cluster"
                },
                "nodes": {
                    "ccm1_p2": {
                        "vm.args": {
                            "setcookie": "cookie2"
                        },
                        "sys.config": {
                            "ccm_nodes": [
                                "ccm1_p2@"
                            ],
                            "worker_num": 1
                        }
                    }
                }
            },
            "op_worker": {
                "config": {
                    "input_dir": "rel/op_worker",
                    "target_dir": "rel/test_cluster"
                },
                "nodes": {
                    "worker1_p2": {
                        "vm.args": {
                            "setcookie": "cookie2"
                        },
                        "sys.config": {
                            "ccm_nodes": [
                                "ccm1_p2@"
                            ],
                            "db_nodes": [
                                "riaknode1"
                            ],
                            "global_registry_node": "gr1@"
                        }
                    },
                    "worker2_p2": {
                        "vm.args": {
                            "setcookie": "cookie2"
                        },
                        "sys.config": {
                            "ccm_nodes": [
                                "ccm1_p2@"
                            ],
                            "db_nodes": [
                                "riaknode1"
                            ],
                            "global_registry_node": "gr1@"
                        }
                    }
                }
            }
        }
    },
    "globalregistry": {
        "config": {
            "input_dir": "rel/globalregistry",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "gr1": {
                "vm.args": {
                    "setcookie": "cookie3"
                },
                "sys.config": {
                    "db_nodes": [
                        "gr1_db@"
                    ],
                    "grpcert_domain": {
                        "string": "127.0.0.1"
                    },
                    "dev_mode": true
                }
            }
        }
    },
    "global_setup": {
        "users": {
            "u1": {
                "default_space": "s1"
            },
            "u2": {
                "default_space": "s2"
            },
            "u3": {
                "default_space": "s1"
            }
        },
        "groups": {
            "g1": {
                "users": [
                    "u1",
                    "u3"
                ]
            },
            "g2": {
                "users": [
                    "u2"
                ]
            }
        },
        "spaces": {
            "s1": {
                "users": [
                    "u1",
                    "u3"
                ],
                "groups": [
                    "g1"
                ],
                "providers": [
                    {
                        "provider": "p1",
                        "supported_size": 1000000000
                    },
                    {
                        "provider": "p2",
                        "supported_size": 1000000000
                    }
                ]
            },
            "s2": {
                "users": [
                    "u2"
                ],
                "groups": [
                    "g2"
                ],
                "providers": [
                    {
                        "provider": "p1",
                        "supported_size": 1000000000
                    }
                ]
            }
        }
    },
    "appmock": {
        "config": {
            "input_dir": "rel/appmock",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "appmock1": {
                "vm.args": {
                    "name": "appmock1@"
                },
                "sys.config": {
                    "app_description_file": "./example_app_description.erl"
                }
            }
        }
    },
    "oneclient": {
        "nodes": {
            "client1": {
                "name": "client1@",
                "op_hostname": "worker@",
                "gr_hostname": "gr1@",
                "user_cert": "./cert.pem",
                "user_key": "./cert.pem"
            },
            "client2": {
                "name": "client2@",
                "op_hostname": "worker@",
                "gr_hostname": "gr1@",
                "user_cert": "./cert.pem",
                "user_key": "./cert.pem"
            }
        }
    },
    "onepanel": {
        "config": {
            "input_dir": "rel_oneprovider/onepanel",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "onepanel1": {
                "vm.args": {
                    "name": "onepanel@onepanel1",
                    "setcookie": "cookie"
                },
                "sys.config": {
                    "multicast_address": {"string": "239.255.0.1"}
                }
            },
            "onepanel2": {
                "vm.args": {
                    "name": "onepanel@onepanel2",
                    "setcookie": "cookie"
                },
                "sys.config": {
                    "multicast_address": {"string": "239.255.0.1"}
                }
            }
        }
    }
}