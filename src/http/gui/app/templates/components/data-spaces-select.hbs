<div class="dropdown">
  <a href="#" class="dropdown-toggle secondary-sidebar-item single-selectable" data-toggle="dropdown"
    role="button" aria-haspopup="true" aria-expanded="false">
    <div class="item-element dropdown-select-icon">
      <div class="item-icon">
        {{icon (if selectedSpace.isDefault 'space-home' 'space')}}
      </div>
      <div class="item-label" title="{{selectedSpace.name}}">
        <div class="trim-hack select-trim-hack">
          {{trim-string selectedSpace.name 14}}
        </div>
      </div>
      <div class="item-icon select-arrow">
        {{icon 'arrow-down'}}
      </div>
    </div>
  </a>
  <ul class="dropdown-menu dropdown-menu-down expand-left dropdown-menu-list dropdown-sidebar-select">
    {{#each spaces as |s|}}
      <li>
        <a href="#" {{action 'setSelectedSpace' s}}>
          <div class="item-icon">
            {{icon (if s.isDefault 'space-home' 'space')}}
          </div>
          <div class="item-label">
            <div class="trim-hack drop-trim-hack">
              {{trim-string s.name 14}}
            </div>
          </div>
        </a>
      </li>
    {{/each}}
  </ul>
</div>
