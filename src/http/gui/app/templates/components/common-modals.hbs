{{!-- simple info modal with OK button --}}

{{#bs-modal open=isInfoModalOpened body=false footer=false
    title=infoModalTitle
    id='info-message'}}
  {{#bs-modal-body}}
    {{infoModalMessage}}
  {{/bs-modal-body}}
  {{#bs-modal-footer as |footer|}}
    {{#bs-button action=(action "close" target=footer) type="primary"}}
      {{t "common.modal.ok"}}
    {{/bs-button}}
  {{/bs-modal-footer}}
{{/bs-modal}}
