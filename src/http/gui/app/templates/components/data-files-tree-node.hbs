<ul>
  {{#each rootDir.children as |file|}}
    {{#if file.isDir}}
      <li class="first-level">
        <div class="secondary-sidebar-item first-level">
          {{#if file.hasSubDirs}}
            <span class="item-icon" {{action 'toggleDir' file}}>
              {{!-- TODO: real-design icons, styles and colors --}}
              {{#if file.isExpanded}}
                {{icon "links" "color-directory"}}
              {{else}}
                {{icon "recent" "color-file"}}
              {{/if}}
            </span>
          {{else}}
            <span class="item-icon">
              {{icon "trash" "color-directory"}}
            </span>
          {{/if}}
          <span class=""  {{action 'browseDir' file}}>
            <span class="item-icon">
              {{icon "folder" "color-folder"}}
            </span>
            <span class="item-label">
              {{file.name}}
            </span>
          </span>
        </div>
        {{#if file.isExpanded}}
          {{data-files-tree-node rootDir=file openDirInBrowser='openDirInBrowser'}}
        {{/if}}
      </li>
    {{/if}}
  {{/each}}
</ul>
