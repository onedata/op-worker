<ul>
  {{#each subdirsSorted as |file|}}
    <li class="{{levelClass}}">
      <div id="tree-dir-{{file.id}}" class="secondary-sidebar-item dir-item single-selectable onedata-red">
        <span class="item-element item-icon" {{action 'toggleDir' file}}>
          {{#if file.isExpanded}}
            {{icon "folder-open" "color-directory"}}
          {{else}}
            {{icon "folder" "color-directory"}}
          {{/if}}
        </span>
        <span class="item-element item-click-area"  {{action 'browseDir' file}}>
          <span class="item-label">
            <div class="truncate truncate-secondary-sidebar-item {{levelClass}}">
              {{file.name}}
            </div>
          </span>
        </span>
      </div>
      {{#if file.isExpanded}}
        {{data-files-tree-node rootDir=file openDirInBrowser='openDirInBrowser'
          level=nextLevel}}
      {{/if}}
    </li>
  {{/each}}
</ul>
