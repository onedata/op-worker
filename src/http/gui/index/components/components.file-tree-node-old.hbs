<table class="table table-hover">
    <thead>
    <tr>
        <td>
            {{input type='checkbox' id='toggle-all' checked=areAllSelected}}
        </td>
        <td>
            <b>File name</b>
        </td>
        <td>
            <b>Depth</b>
        </td>
        <td>
            <b>ID</b>
        </td>
        <td>
            <b>Parent</b>
        </td>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            {{input type='checkbox' checked=file.selected class='toggle' bubbles=false}}
        </td>
        <td  {{action 'expandRow' file}}>
            {{file.name}}
        </td>
        <td  {{action 'expandRow' file}}>
            {{file.depth}}
        </td>
        <td  {{action 'expandRow' file}}>
            {{file.id}}
        </td>
        <td  {{action 'expandRow' file}}>
            {{file.parent.name}}
        </td>
    </tr>
    {{#if file.expanded}}
        <tr>
            <table>
                <tbody>
                {{#each child in file.children}}
                    <tr>
                        <td>
                            {{input type='checkbox' checked=child.selected class='toggle' bubbles=false}}
                        </td>
                        <td  {{action 'expandRow' f}}>
                            {{child.name}}
                        </td>
                        <td  {{action 'expandRow' f}}>
                            {{child.depth}}
                        </td>
                        <td  {{action 'expandRow' f}}>
                            {{child.id}}
                        </td>
                        <td  {{action 'expandRow' f}}>
                            {{child.parent.name}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </tr>
    {{/if}}
    </tbody>
</table>