<h3>File manager</h3>
<div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default" id="create-new"
            data-toggle="modal" data-target="#newFileDialog">
        Create
    </button>
    <button type="button" class="btn btn-default" id="remove"
            {{action "remove"}} {{bindAttr disabled="inNoneSelected"}}>
    Remove
    </button>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <td>
            {{input type="checkbox" id="toggle-all" checked=allAreSelected}}
        </td>
        <td>
            File name
        </td>
        <td>
            Some attribute
        </td>
    </tr>
    </thead>
    <tbody>
    {{#each f in model}}
    <tr>
        <td>
            {{input type="checkbox" checked=f.selected class="toggle"}}
        </td>
        <td>
            {{f.name}}
        </td>
        <td>
            {{f.attribute}}
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>


<div id="newFileDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--{{action "createNew"}}-->
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create new file</h4>
            </div>
            <div class="modal-body">
                {{input
                type="text"
                id="new-file-name"
                placeholder="File name"
                value=newFileName}}
                {{input
                type="text"
                id="new-file-attr"
                placeholder="File attribute"
                value=newFileAttr
                action="createNew" }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal" {{action
                "createNew"}}>
                Ok
                </button>
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>

    </div>
</div>