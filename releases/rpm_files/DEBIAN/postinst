#!/bin/sh
# postinst script for oneprovider
#
# see: dh_installdeb(1)
set -e

case "$1" in
    configure)
        sh /opt/oneprovider/onepanel_setup /opt/oneprovider
        /etc/init.d/onepanel start
        ln -sf /opt/oneprovider/setup /usr/bin/oneprovider_setup
        ln -sf /opt/oneprovider/addusers /usr/bin/oneprovider_addusers
        ln -sf /opt/oneprovider/onepanel_admin /usr/bin/onepanel_admin
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
