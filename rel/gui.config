%% This file is used by gui_compiler.escript in order to
%% place files needed by GUI in release package.
%% The sole fact of placing this file in rel/ will cause the
%% gui_compiler to be run automatically.
%% It is also used by sync module to automatically update (in runtime)
%% the GUI files that changed.
%% Important notes:
%% - during copying, all xxx.coffee files will be compiled and copied as xxx.js
%% - during copying, all xxx.hbs files will be compiled and copied as xxx.js
%% - during copying, all xxx.html files will be placed in the root of
%%      release static files dir

%% Target location in release package where static GUI files should be copied.
{release_static_files_dir, "data/gui_static"}.

%% Location of directory that contains all gui files.
{source_gui_dir, "src/http/gui"}.
%% Example directory structure for source_gui_dir=src/gui
%% and main ember page 'index':
%% src
%%  |
%%  -- gui
%%      |
%%      -- common
%%      |   |
%%      |   -- js/
%%      |   -- css/
%%      |
%%      -- index
%%      |   |
%%      |   -- index.html
%%      |   -- index_backend.erl
%%      |   -- subpage_1
%%      |   |   | -- css/
%%      |   |   | -- images/
%%      |   |   | -- js/
%%      |   |
%%      |   -- subpage_2
%%      |       | -- css/
%%      |       | -- images/
%%      |       | -- js/
%%      |
%%      -- login
%%      |   |
%%      |   -- login.html
%%      |   -- login_backend.erl
%%     ...
%%
%% The 'index' page is assumed to be an Ember application. They are SPAs
%% (Single Page Applications), which means that the whole application
%% is loaded with the index.html file. Subpages are for clear organization of
%% static files.
%%
%% This structure means, that all files specific for page 'index' should
%% be placed in the 'index' directory.
%% Page specific files are referenced as follows (e.g. from .html file):
%%    <script src="/index/subpage_1/js/application.js"></script>
%%
%% In above example, common files are referenced as follows:
%%    <script src="/common/js/ember-data.js"></script>
%% however, the common dir may lay wherever in source_gui_dir and the path
%% to it will then change to the path relative to source_gui_dir.
%%
%% During realease generation, all files will be copied, with following
%% exceptions:
%%  - .html files will be placed in the root of static files dir.
%%  - .erl files will be ommited
%%  - .coffee files will be compiled to .js
%%  - .hbs (handlebar templates) files will be compiled to .js
%%
%% Above dir structure after release generation:
%% data
%%  |
%%  -- gui_static
%%      |
%%      -- index.html
%%      -- login.html
%%      |
%%      -- common
%%      |   |
%%      |   -- js/
%%      |   -- css/
%%      |
%%      -- index
%%      |   |
%%      |   -- subpage_1
%%      |   |   | -- css/
%%      |   |   | -- images/
%%      |   |   | -- js/
%%      |   |
%%      |   -- subpage_2
%%      |       | -- css/
%%      |       | -- images/
%%      |       | -- js/
%%      |
%%     ...


